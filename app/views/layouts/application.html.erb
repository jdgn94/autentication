<!DOCTYPE html>
<html>
  <head>
    <title>Autentication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_user %>
      <%= link_to "Cerrar sesion", destroy_user_session_path, mothod: :delete %>
    <% else %>
      <%= link_to "Iniciar sesion", new_user_session_path %>
      <%= link_to "Crear sesion", new_user_registration_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
