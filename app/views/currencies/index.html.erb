<h1 class="display-4 text-center">Currencyes</h1>
<table class="table table-hover">
	<thead class="thead-dark">
		<tr>
			<th>Name</th>
			<th>Acronym</th>
			<th>Symbol</th>
			<th>Conversion</th>
			<th colspan="4"></th>
		</tr>
	</thead>
	<tbody>
		<% @currencies.each do |currency| %>
		<tr>
			<td>currency.name_currency</td>
			<td>currency.acronym</td>
			<td>currency.symbol</td>
			<td>currency.convertion</td>
			<% unless current_user.nil? && current_user.profile.nil? && current_user.profile.rol_id == 2 %>
				<td><%= link_to :edit, edit_currrency %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>